// imports
@import "css/normalize.css"
@import "css/bootstrap-grid.min.css"
@import "css/jquery.fullpage.min.css"
@import "css/font-awesome.min.css"
@import "css/animate.css"

// base
@import "base"


primary = #a1dfd4
main = #080808

body
	font-family "Proxima nova", arial, sans-serif !important
	line-height 1.1

h1,h2,h3,h4,h5,h6
	color #fff
	font-weight 300 !important
	text-transform uppercase

a
	color primary
	&:hover
		color primary - 20%

p
	font-weight 400

.logo
	&__img
		background url('../../img/logo.png') no-repeat
		display inline-block
		height 50px
		width 90px
	&__text
		display inline-block
		font-size 19px
		left 15px
		position relative
		top -10px
		text-transform uppercase

// fullpage.js
#fp-nav ul li a span,
.fp-slidesNav ul li a span
	background-color primary
	margin 0

#fp-nav ul li a span,
.fp-slidesNav ul li a span
	height 12px
	width 12px

#fp-nav ul li a span,
.fp-slidesNav ul li a span
	margin 0

#fp-nav ul li:hover a span,
.fp-slidesNav ul li:hover a span
	height 12px
	width 12px
	margin 0

#fp-nav ul li, .fp-slidesNav ul li
	margin-right 50px
	margin-top 20px

#fp-nav ul li a.active span, #fp-nav ul li:hover a.active span,
.fp-slidesNav ul li a.active span, .fp-slidesNav ul li:hover a.active span
	box-shadow 0 0 15px rgba(primary, .6)
	height 24px
	width 24px
	&:after
		content url('../../img/arrow.png')
		position absolute
		top 5px
		left 5px

.section
	background-color main

.main-header
	background-color #040404
	padding-bottom 20px
	&__phone
		display inline-block
		margin-left 374px
		margin-right 106px
		position relative
		top -5px
		p
			color #666
			font-size 1.4rem
			margin-bottom 0
		span
			font-size 1.8rem
	&__logo
		display inline-block
		position relative
		top 15px
	&__icons
		display inline-block
		position relative
		margin-right 100px
		width 16.5rem
		&:before
			background url('../../img/border-1.png')
			content ''
			left -76px
			top -.7rem
			height 80px
			position absolute
			width 40px
		&:after
			background url('../../img/border-2.png')
			content ''
			right -62px
			top -3rem
			height 80px
			position absolute
			width 40px
		.icons__link
			border 1px solid #333
			display inline-block
			margin-right 2rem
			text-align center
			transition all .2s
			width 40px
			&:hover
				border-color primary
				box-shadow 0 0 30px rgba(primary, .3)
				& .fa
					color primary
			&:last-child
				margin-right 0
		.fa
			color #333
			font-size 25px
			line-height 40px
			transition all .2s


.content__img
	display inline-block
	left 36px
	position relative
	top -10px
	z-index 50

.content__header
	display inline-block
	margin-top 12rem
	position relative
	left -40px
	padding 25px
	padding-right 30px
	position relative
	top -12px
	z-index 0
	&-border
		background url('../../img/border.png') no-repeat 100% 25%
	h1
		color primary
		margin-bottom 0
		position relative
		top 7px
		font-size 62px
		&:before
			content url('../../img/effect.png')
			position absolute
			top 20px
			left 50px
		&:after
			content url('../../img/effect.png')
			position absolute
			top -20px
			right 83px
	h2
		font-size 2.2rem
		position relative
		top 12px
		letter-spacing .8px
	h3
		display inline-block
		position relative
		&:after
			content ""
			background-color primary
			bottom -5px
			height 1px
			left 0
			position absolute
			width 100%


.blockquote-first
	color #fff
	display inline-block
	position relative
	right -155px
	text-align center
	top -278px
	width 100%
	.blockquote
		font-weight 300 !important
		position relative
		&:before
			content url('../../img/blockquote-left.png')
			right 795px
			height 20px
			width 50px
			position absolute
			top -5px
		&:after
			content url('../../img/blockquote-right.png')
			right 339px
			height 20px
			width 50px
			position absolute
			top 45px
	p
		color #999
		margin-top 40px


blockquote
	color #999
	border-left 0
	font-size 1.8rem
	font-weight 300
	font-style italic